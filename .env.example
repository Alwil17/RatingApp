# =======================
# General configs
# =======================
APP_NAME=RatingAPI
APP_VERSION=1.0.0
APP_ENV=development  # Can be "development", "staging" ou "production"
APP_SECRET_KEY=super_secret_key  # Key for JWT tokens
APP_DEBUG=True

# =======================
# Server configs
# =======================
HOST=127.0.0.1
PORT=8000

# =======================
# DB configs
# =======================
DB_ENGINE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ratingdb
DB_USER=rating_user
DB_PASSWORD=super_secure_password

# =======================
# JWT configs
# =======================
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # Token validity minutes
JWT_ALGORITHM=HS256

# =======================
# OAuth2 configs
# =======================
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret

# =======================
# Sentry configs
# =======================
SENTRY_DSN=https://your_sentry_dsn

# =======================
# Prometheus configs
# =======================
PROMETHEUS_ENABLED=True
